<h1 class= "page-title">This is my blog</h1>

<div>
<%= link_to 'New Post', new_post_path, :class => "btn btn-primary btn-lg" %>

  <% @posts.each do |post| %>
    
    <div class= 'post' >
    <h3 class= 'post-title'><%= post.title %></br></h3>
    <p class= 'post-body'><%= post.body %></br><p>

    <%= image_tag post.pictures.first.image.url(:medium) unless post.pictures.empty? %></br></br>

    <%= post.Author %></br></br>
    
    </div>
    <%= link_to 'Edit', edit_post_path(post), :class => "btn btn-warning btn-lg" %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-lg" %>
    <%= link_to "New Image", new_image_path(post_id: post.id), :class => "btn btn-primary btn-lg" %>
    <% end %></br></br> 
    
<%= link_to 'New Post', new_post_path, :class => "btn btn-primary btn-lg" %>
    
</div> 

